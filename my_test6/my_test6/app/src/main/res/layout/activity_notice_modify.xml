<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edu_module.Manager.Notice.NoticeAddActivity">

    <TextView
        android:id="@+id/EduModifyNoticeTextView"
        android:layout_width="129dp"
        android:layout_height="29dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="32dp"
        android:text="公告内容"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EduModifyNoticeeditText"
        android:layout_width="257dp"
        android:layout_height="217dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EduModifyNoticeTextView" />

    <Button
        android:id="@+id/EduModifyNoticebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="76dp"
        android:text="修改"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EduModifyNoticeeditText" />
</androidx.constraintlayout.widget.ConstraintLayout>