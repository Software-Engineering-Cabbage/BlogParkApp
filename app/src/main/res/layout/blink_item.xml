<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/img_blog_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="12dp"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp"
        app:contentPaddingTop="7dp">

        <RelativeLayout
            android:id="@+id/rela_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_blog_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp" />


            <TextView
                android:id="@+id/tv_blog_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/img_blog_avatar"
                android:layout_alignTop="@+id/img_blog_avatar"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/img_blog_avatar"
                android:text="作者"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tv_blog_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/img_blog_avatar"
                android:autoLink="all"
                android:lineSpacingExtra="6sp"
                android:text="时间"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_blog_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/img_blog_avatar"
                android:autoLink="all"
                android:lineSpacingExtra="6sp"
                android:text="描述" />

            <ImageView
                android:id="@+id/img_blog_reponse"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@+id/tv_blog_reponse"
                android:layout_below="@+id/tv_blog_reponse"
                android:background="@drawable/ic_question_black_24dp"></ImageView>

            <TextView
                android:id="@+id/tv_blog_reponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:autoLink="all"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="9dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>