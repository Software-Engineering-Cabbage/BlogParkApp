<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_userblog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="7dp"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp"
        app:contentPaddingTop="7dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_Homework_blogtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="TextView"
                android:textAllCaps="true"
                android:textColor="#FB070000"
                android:textColorLink="#050000"
                android:textSize="18sp"
                android:textStyle="bold"  />

            <TextView
                android:id="@+id/item_Homework_abstract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="bulabulabula"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_below="@id/item_Homework_read"/>

            <TextView
                android:id="@+id/item_Homework_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingBottom="5dp"
                android:layout_toStartOf="@+id/item_Homework_read"
                android:layout_below="@+id/item_Homework_blogtitle"
                android:text="提交：0"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_Homework_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/item_Homework_blogtitle"
                android:text="提交：0"
                android:textColor="#000000"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/item_Homework_Userhead"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/item_Homework_abstract"/>

            <TextView
                android:id="@+id/item_Homework_author"
                android:layout_width="138dp"
                android:layout_height="24dp"
                android:layout_alignTop="@id/item_Homework_Userhead"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView"
                android:layout_below="@+id/item_Homework_abstract"
                android:layout_toRightOf="@+id/item_Homework_Userhead"/>

            <TextView
                android:id="@+id/item_Homework_time"
                android:layout_width="190dp"
                android:layout_height="24dp"
                android:layout_alignTop="@id/item_Homework_Userhead"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView"
                android:gravity="end"
                android:layout_below="@+id/item_Homework_abstract"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>