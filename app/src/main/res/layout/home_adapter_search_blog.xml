<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_search_blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="7dp"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp"
        app:contentPaddingTop="7dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_title_search_blog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="TextView"
                android:textAllCaps="true"
                android:textColor="#FB070000"
                android:textColorLink="#050000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_text_search_blog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_title_search_blog"
                android:layout_alignLeft="@id/textView_title_search_blog"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView"
                android:textColor="#F70B0000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_user_search_blog"
                android:layout_width="190dp"
                android:layout_height="24dp"
                android:layout_below="@id/textView_text_search_blog"
                android:layout_alignLeft="@id/textView_title_search_blog"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView_msg_search_blog"
                android:layout_width="170dp"
                android:layout_height="24dp"
                android:layout_alignTop="@id/textView_user_search_blog"
                android:layout_alignBottom="@id/textView_user_search_blog"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@id/textView_user_search_blog"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>